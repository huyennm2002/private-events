

<div class="container user-info">
	<div class="row">
		<div class="col">
			<h2>User Profile: <%= @user.name %></h2>
		</div>	
	</div>	
</div>

<div class="container">
    <div class="card card-body">
		<% if @created_events != nil%>
			<h2>Created Events</h2>
			<% @created_events.each do |event| %>
				<div class="row border border-dark" id="event-row">
					<p class="event-title"><%= link_to event.name, event %></p> 
					<p>Date: <%= event.date.strftime("%d/%m/%y") %></p>
					<p>Location: <%= event.location %></p>
					<div>Description: <%= event.description %></div>
				</div>
			<% end %>
		
		<% end %>
	</div>

	<div class="card card-body">
		<% if @attended_events != nil%>
			<h2>My Event Interest</h2>
			<% @attended_events.each do |event| %>
				<div class="row border border-dark" id="event-row">
					<p class="event-title"><%= link_to event.name, event %></p> 
					<p>Date: <%= event.date.strftime("%d/%m/%y") %></p>
					<p>Location: <%= event.location %></p>
					<div>Description: <%= event.description %></div>
				</div>
			<% end %>
		<% end %>
	</div>	

	<div class="card card-body">
		<% if @event != nil%>
			<h2>Created Events</h2>
			<% @events.each do |event| %>
				<div class="row border border-dark" id="event-row">
					<p class="event-title"><%= link_to event.name, event %></p> 
					<p>Date: <%= event.date.strftime("%d/%m/%y") %></p>
					<p>Location: <%= event.location %></p>
					<div>Description: <%= event.description %></div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
